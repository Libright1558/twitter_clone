{
  "extends": "eslint:recommended",
  "parser": "@babel/eslint-parser",
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "rules": {
      "indent"           : [1, 4],
      "no-else-return"   : 1,
      "semi"             : [1, "always"]
  },
  "overrides": [
    {
      "files": ["./src/**/*.ts"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint"]
    }
  ]
}
