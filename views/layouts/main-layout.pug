include ../mixins/mixins

doctype html
html
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD' crossorigin='anonymous')
        link(rel="stylesheet", href="/css/main.css")
        title #{pageTitle}
    body
        .wrapper
           .row
                nav.col-2
                    a.blue(href="/")
                       i.fa-regular.fa-flag
                    a(href="/")
                       i.fa-solid.fa-house
                    a(href="/search")
                       i.fa-solid.fa-magnifying-glass
                    a(href="/notifications")
                       i.fa-regular.fa-bell
                    a(href="/messanges")
                       i.fa-regular.fa-envelope
                    a(href="/profile")
                       i.fa-regular.fa-user
                    a(href="/logout")
                       i.fa-solid.fa-right-from-bracket
                .mainSectionContainer.col-10.col-md-8.col-lg-6
                    .titleContainer
                       h1 #{pageTitle}
                    block content
                .d-none.d-md-block.col-md-2.col-lg-4
                
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js' integrity='sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN' crossorigin='anonymous')
        script(src='https://kit.fontawesome.com/a6c4724d7b.js', crossorigin='anonymous')

        block scripts

        script(src="/js/common.js") 